<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="#925cc8e9"
                android:centerColor="#925cc8e9"
                android:centerY="10.0"
                android:endColor="#925cc8e9"
                android:angle="270"
                />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#073b7b"
                    android:centerColor="#073b7b"
                    android:centerY="10.0"
                    android:endColor="#073b7b"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#468fe7"
                    android:centerColor="#468fe7"
                    android:centerY="10.0"
                    android:endColor="#468fe7"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

</layer-list>