<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="jcse.app.ergclassroom.NavigateActivity"
    tools:showIn="@layout/activity_navigate">


    <Button
        android:text="@string/preparation"
        android:id="@+id/button3"
        android:onClick="profile"
        android:textColor="#4A4A4A"
        android:textSize="30sp"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/bluebutton"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true" />
    <Button
        android:text="@string/logout"
        android:onClick="logout"
        android:id="@+id/button5"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="@string/sync"
        android:id="@+id/button4"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="@string/send_user_stats"
        android:id="@+id/button2"
        android:layout_above="@+id/button4"
        android:layout_centerHorizontal="true" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/custom_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dip"
            android:layout_marginLeft="60dip"
            android:maxHeight="10dip"
            android:minHeight="10dip"

            android:minWidth="900dip"
            android:maxWidth="1000dip"
            android:max="100"

            />
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/custom_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarSecond"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="60dip"
        android:maxHeight="10dip"
        android:minHeight="10dip"

        android:minWidth="900dip"
        android:maxWidth="1000dip"
        android:max="100"

        />


</RelativeLayout>
